class MyStuff:
    x=360

p1 = MyStuff()
print(p1)
print(p1.x)
a=None
class Pawn:
    def __init__(pawn,name,age,race):
        global a
        pawn.name = name
        a=pawn.name
        pawn.ae = age
        pawn.x=0
        pawn.y=0
        pawn.race=race
    def __str__(deb):
        return f"{deb.name},Age:{deb.ae},PositionX:{deb.x},PositionY:{deb.y}"
    def hello(deb,P,I):
        print(P+ deb.name, I)
    def x_incrementby1(pawn,I):
        pawn.x+=I
    def arebothpawnshere(pawn,deb):
        if pawn.x == deb.x and pawn.y == deb.y:
            print(f"I am here with {deb.name}")
        else:
            print(f"Nah I'm not with {deb.name}")
    def areboththesamename(pawn,deb,i=0):
        if pawn.name != deb.name:
            if i == 1:
                print("I",pawn.name,"do not share the same name with "+a)
            return False
        else:
            if i == 1:
                print("I",pawn.name,"share the same name with "+a)
            return True



Cael = Pawn("Loverdale", 17, "Ashoid")
Phorho=Pawn("Politos", 20, "Ashoid")

print(Cael.name)
print(Cael.ae)

Cael.x+=1
Cael.y=1
Cael.x_incrementby1(1)
print(Cael)

Cael.hello("Hi I'm ","an " + Cael.race)

Cael.arebothpawnshere(Phorho)
Cael.areboththesamename(Phorho)

if Cael.areboththesamename(Phorho):
    print("And yes that is true")
else:
    print(f"To simply: {Cael.areboththesamename(Phorho,1)}")